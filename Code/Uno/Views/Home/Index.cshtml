    <input type="button" id="joinGame" value="Join Game" onclick="joinGame()"/>
    <input type="text" id="gameId" />
    <hr/>
    <input type="button" id="createGame" value="Create Game" onclick="createGame()"/>
    <hr/>
</div>
<div id="leaveControls" style="visibility: hidden">
    <input type="button" id="leaveGame" value="Leave Game" onclick="leaveGame()"/>
